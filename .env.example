"""
Configuration example for the Telex system.

Copy this file to .env and customize for your deployment.
"""

# Node Identification
TELEX_NODE_ID=0001
TELEX_LOCATION_CODE=000
TELEX_MACHINE_ID=1

# Network Settings
TELEX_LISTEN_HOST=0.0.0.0
TELEX_LISTEN_PORT=8023
TELEX_MAX_CONNECTIONS=100

# Message Settings
TELEX_MESSAGE_TTL_HOURS=72
TELEX_MAX_MESSAGE_SIZE=65536

# Database Settings
TELEX_DATABASE_PATH=telex_data/messages.db
TELEX_DEDUP_DB_PATH=telex_data/dedup.db

# Hardware Settings
TELEX_HARDWARE_ENABLED=false
# TELEX_SERIAL_PORT=/dev/ttyUSB0
# TELEX_GPIO_PIN=17

# Logging
TELEX_LOG_LEVEL=INFO
TELEX_LOG_FORMAT=json
